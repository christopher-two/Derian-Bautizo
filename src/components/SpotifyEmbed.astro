---
// SpotifyEmbed.astro
// Replace PLAYLIST_ID with your actual Spotify playlist ID
const PLAYLIST_ID = "37i9dQZF1DX6mvEU1S6INL"; // placeholder: De Fiesta playlist
---

<section class="spotify-section" id="playlist">
    <div class="spotify-inner">
        <span class="section-label">Música</span>
        <h2 class="section-title">Playlist del evento</h2>
        <span class="divider"></span>
        <p class="spotify-desc">
            Las canciones que acompañarán este día especial
        </p>

        <div class="spotify-embed">
            <iframe
                title="Playlist del Bautizo de Derian Tadeo"
                src={`https://open.spotify.com/embed/playlist/${PLAYLIST_ID}?utm_source=generator&theme=0`}
                width="100%"
                height="380"
                frameborder="0"
                allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
                loading="lazy"></iframe>
        </div>
    </div>
</section>

<style>
    .spotify-section {
        padding: var(--section-pad);
        background: var(--cream);
        text-align: center;
    }

    .spotify-inner {
        max-width: 720px;
        margin: 0 auto;
    }

    .spotify-desc {
        font-family: var(--font-serif);
        font-style: italic;
        color: var(--text-light);
        margin-bottom: 2.5rem;
        font-size: 1rem;
    }

    .spotify-embed {
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 40px rgba(26, 58, 92, 0.1);
        border: 1px solid var(--border);
    }

    .spotify-embed iframe {
        display: block;
        border: none;
        width: 100%;
    }
</style>
