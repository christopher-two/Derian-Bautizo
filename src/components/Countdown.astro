---

<section class="countdown-section" id="countdown">
    <div class="countdown-inner">
        <span class="section-label">Faltan solo</span>
        <div class="countdown" id="countdown-grid">
            <div class="countdown__unit">
                <span class="countdown__num" id="cd-days">--</span>
                <span class="countdown__label">DÃ­as</span>
            </div>
            <div class="countdown__sep" aria-hidden="true">:</div>
            <div class="countdown__unit">
                <span class="countdown__num" id="cd-hours">--</span>
                <span class="countdown__label">Horas</span>
            </div>
            <div class="countdown__sep" aria-hidden="true">:</div>
            <div class="countdown__unit">
                <span class="countdown__num" id="cd-minutes">--</span>
                <span class="countdown__label">Min</span>
            </div>
            <div class="countdown__sep" aria-hidden="true">:</div>
            <div class="countdown__unit">
                <span class="countdown__num" id="cd-seconds">--</span>
                <span class="countdown__label">Seg</span>
            </div>
        </div>

        <p class="countdown__target">29 de Marzo Â· 2026</p>
    </div>
</section>

<script>
    const TARGET = new Date("2026-03-29T11:00:00");

    function pad(n: number) {
        return String(n).padStart(2, "0");
    }

    function tick() {
        const now = new Date();
        const diff = TARGET.getTime() - now.getTime();

        if (diff <= 0) {
            document.getElementById("countdown-grid")!.innerHTML =
                '<p class="countdown__done">Â¡Hoy es el gran dÃ­a! ðŸŽ‰</p>';
            return;
        }

        const days = Math.floor(diff / 86400000);
        const hours = Math.floor((diff % 86400000) / 3600000);
        const minutes = Math.floor((diff % 3600000) / 60000);
        const seconds = Math.floor((diff % 60000) / 1000);

        (document.getElementById("cd-days") as HTMLElement).textContent =
            pad(days);
        (document.getElementById("cd-hours") as HTMLElement).textContent =
            pad(hours);
        (document.getElementById("cd-minutes") as HTMLElement).textContent =
            pad(minutes);
        (document.getElementById("cd-seconds") as HTMLElement).textContent =
            pad(seconds);
    }

    tick();
    setInterval(tick, 1000);
</script>

<style>
    .countdown-section {
        padding: var(--section-pad);
        background: linear-gradient(
            160deg,
            var(--blue-deep) 0%,
            #0f2744 80%,
            var(--warm-white) 100%
        );
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .countdown-section::before {
        content: "";
        position: absolute;
        inset: 0;
        background-image: radial-gradient(
                circle at 20% 50%,
                rgba(96, 165, 250, 0.15) 0%,
                transparent 50%
            ),
            radial-gradient(
                circle at 80% 50%,
                rgba(74, 144, 217, 0.1) 0%,
                transparent 50%
            );
        pointer-events: none;
    }

    .countdown-inner {
        position: relative;
        max-width: 700px;
        margin: 0 auto;
    }

    .countdown-section .section-label {
        color: rgba(96, 165, 250, 0.8);
    }

    .countdown-section .section-title {
        color: var(--warm-white);
    }

    .countdown-section .divider {
        background: linear-gradient(
            90deg,
            var(--blue-accent),
            rgba(96, 165, 250, 0.3)
        );
    }

    .countdown {
        display: flex;
        align-items: flex-start;
        justify-content: center;
        gap: 0.5rem;
        margin: 1.5rem 0 1rem;
    }

    .countdown__unit {
        display: flex;
        flex-direction: column;
        align-items: center;
        min-width: 80px;
    }

    .countdown__num {
        font-family: var(--font-serif);
        font-size: clamp(2.5rem, 8vw, 5.5rem);
        font-weight: 700;
        color: var(--warm-white);
        line-height: 1;
        background: linear-gradient(135deg, #fff 0%, var(--blue-accent) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        transition: transform 0.2s ease;
    }

    .countdown__label {
        font-family: var(--font-sans);
        font-size: 0.65rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.5);
        margin-top: 0.4rem;
    }

    .countdown__sep {
        font-family: var(--font-serif);
        font-size: clamp(2.5rem, 8vw, 5rem);
        color: rgba(96, 165, 250, 0.4);
        line-height: 1;
        padding-top: 0.05em;
    }

    .countdown__target {
        font-family: var(--font-sans);
        font-size: 0.8rem;
        letter-spacing: 0.25em;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.4);
    }

    .countdown__done {
        font-family: var(--font-serif);
        font-size: 2rem;
        color: var(--warm-white);
        padding: 2rem;
    }

    @media (max-width: 480px) {
        .countdown__unit {
            min-width: 60px;
        }
        .countdown__sep {
            display: none;
        }
        .countdown {
            gap: 1rem;
        }
    }
</style>
