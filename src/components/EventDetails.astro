            <!-- Party Card -->
            <div class="detail-card detail-card--accent">
                <div class="detail-card__icon" aria-hidden="true">
                    <svg
                        viewBox="0 0 48 48"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                        width="40"
                        height="40"
                    >
