---
// MapEmbed.astro — Google Maps for Church and Party Location
// Replace the src URLs with the actual Google Maps embed URLs for the real locations
const churchMapSrc =
    "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3762.661!2d-99.1332!3d19.4326!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTnCsDI1JzU3LjQiTiA5OcKwMDcnNTkuNSJX!5e0!3m2!1ses!2smx!4v1234567890";
const partyMapSrc =
    "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3763.661!2d-99.1532!3d19.4226!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTnCsDI1JzIxLjQiTiA5OcKwMDgnMzEuMiJX!5e0!3m2!1ses!2smx!4v1234567890";
---

<section class="maps-section" id="ubicacion">
    <div class="maps-inner">
        <span class="section-label">¿Cómo llegar?</span>
        <h2 class="section-title">Ubicaciones</h2>
        <span class="divider"></span>

        <div class="maps-grid">
            <!-- Church Map -->
            <div class="map-card">
                <div class="map-card__header">
                    <div class="map-card__icon" aria-hidden="true">
                        <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                        >
                            <path
                                d="M12 21C12 21 5 14.5 5 9a7 7 0 0114 0c0 5.5-7 12-7 12z"
                            ></path>
                            <circle cx="12" cy="9" r="2.5"></circle>
                        </svg>
                    </div>
                    <div>
                        <span class="map-card__tag">Ceremonia Religiosa</span>
                        <h3 class="map-card__name">Nombre de la Iglesia</h3>
                    </div>
                </div>
                <div class="map-card__embed">
                    <iframe
                        title="Ubicación de la Iglesia"
                        src={churchMapSrc}
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"
                        allowfullscreen></iframe>
                </div>
                <a
                    class="map-card__link"
                    href="https://maps.google.com/?q=Direccion+de+la+Iglesia"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    Abrir en Google Maps
                    <svg
                        width="14"
                        height="14"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        ><path
                            d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3"
                        ></path>
                    </svg>
                </a>
            </div>

            <!-- Party Map -->
            <div class="map-card">
                <div class="map-card__header">
                    <div class="map-card__icon" aria-hidden="true">
                        <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                        >
                            <path
                                d="M12 21C12 21 5 14.5 5 9a7 7 0 0114 0c0 5.5-7 12-7 12z"
                            ></path>
                            <circle cx="12" cy="9" r="2.5"></circle>
                        </svg>
                    </div>
                    <div>
                        <span class="map-card__tag">Recepción</span>
                        <h3 class="map-card__name">Nombre del Salón</h3>
                    </div>
                </div>
                <div class="map-card__embed">
                    <iframe
                        title="Ubicación del Salón"
                        src={partyMapSrc}
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"
                        allowfullscreen></iframe>
                </div>
                <a
                    class="map-card__link"
                    href="https://maps.google.com/?q=Direccion+del+Salon"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    Abrir en Google Maps
                    <svg
                        width="14"
                        height="14"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        ><path
                            d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3"
                        ></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .maps-section {
        padding: var(--section-pad);
        background: var(--warm-white);
        text-align: center;
    }

    .maps-inner {
        max-width: 960px;
        margin: 0 auto;
    }

    .maps-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        margin-top: 3rem;
    }

    .map-card {
        background: var(--cream);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        overflow: hidden;
        box-shadow: var(--shadow);
        transition: var(--transition);
        text-align: left;
    }

    .map-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 40px rgba(26, 58, 92, 0.12);
    }

    .map-card__header {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid var(--border);
    }

    .map-card__icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--blue-pale);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--blue-mid);
        flex-shrink: 0;
    }

    .map-card__tag {
        display: block;
        font-size: 0.65rem;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--blue-light);
        margin-bottom: 0.2rem;
    }

    .map-card__name {
        font-family: var(--font-serif);
        font-size: 1.1rem;
        font-weight: 400;
        color: var(--blue-deep);
    }

    .map-card__embed {
        height: 240px;
        overflow: hidden;
    }

    .map-card__embed iframe {
        width: 100%;
        height: 100%;
        border: none;
        display: block;
    }

    .map-card__link {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.85rem;
        font-family: var(--font-sans);
        font-size: 0.8rem;
        font-weight: 500;
        color: var(--blue-mid);
        border-top: 1px solid var(--border);
        transition: var(--transition);
        letter-spacing: 0.03em;
    }

    .map-card__link:hover {
        background: var(--blue-pale);
        color: var(--blue-deep);
    }

    @media (max-width: 640px) {
        .maps-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
