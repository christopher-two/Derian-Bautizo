---
// MapEmbed.astro — Google Maps for Church and Party Location
const churchMapSrc =
    "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3762.661!2d-99.1332!3d19.4326!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTnCsDI1JzU3LjQiTiA5OcKwMDcnNTkuNSJX!5e0!3m2!1ses!2smx!4v1234567890";
const partyMapSrc =
    "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3763.661!2d-99.1532!3d19.4226!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTnCsDI1JzIxLjQiTiA5OcKwMDgnMzEuMiJX!5e0!3m2!1ses!2smx!4v1234567890";
---

<section class="maps-section" id="ubicacion">
    <div class="maps-grid">
        <!-- Church Map -->
        <div class="map-card">
            <iframe
                src={churchMapSrc}
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
            <div class="map-card__overlay">
                <div class="map-card__info">
                    <span class="map-card__badge">Ceremonia</span>
                    <h3 class="map-card__title">Nombre de la Parroquia</h3>
                    <a
                        href="https://maps.google.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="map-card__link"
                    >
                        <span>Abrir en Google Maps</span>
                        <svg
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            width="18"
                            height="18"
                            ><path
                                d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6"
                            ></path><polyline points="15 3 21 3 21 9"
                            ></polyline><line x1="10" y1="14" x2="21" y2="3"
                            ></line>
                        </svg>
                    </a>
                </div>
            </div>
        </div>

        <!-- Party Map -->
        <div class="map-card">
            <iframe
                src={partyMapSrc}
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
            <div class="map-card__overlay">
                <div class="map-card__info">
                    <span class="map-card__badge">Recepción</span>
                    <h3 class="map-card__title">Nombre del Salón</h3>
                    <a
                        href="https://maps.google.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="map-card__link"
                    >
                        <span>Abrir en Google Maps</span>
                        <svg
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            width="18"
                            height="18"
                            ><path
                                d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6"
                            ></path><polyline points="15 3 21 3 21 9"
                            ></polyline><line x1="10" y1="14" x2="21" y2="3"
                            ></line>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .maps-section {
        background: var(--warm-white);
        overflow: hidden;
    }

    .maps-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        padding: 4rem 2rem;
        gap: 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .map-card {
        height: 500px;
        position: relative;
        background: #f1f3f4;
        border-radius: 2rem;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .map-card iframe {
        display: block;
    }

    .map-card__overlay {
        position: absolute;
        bottom: 1.5rem;
        left: 1.5rem;
        right: 1.5rem;
        pointer-events: none;
    }

    .map-card__info {
        background: white;
        padding: 1.25rem 1.75rem;
        border-radius: 1.25rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        display: inline-block;
        pointer-events: auto;
        animation: fade-in-up 0.8s ease both;
    }

    .map-card__badge {
        display: inline-block;
        font-family: var(--font-sans);
        font-size: 0.6rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: var(--blue-mid);
        margin-bottom: 0.25rem;
    }

    .map-card__title {
        font-family: var(--font-serif);
        font-size: 1.25rem;
        color: var(--blue-deep);
        margin-bottom: 0;
    }

    @media (max-width: 1024px) {
        .maps-grid {
            padding: 3rem 1.5rem;
            gap: 1.5rem;
        }
    }

    @media (max-width: 850px) {
        .maps-grid {
            grid-template-columns: 1fr;
        }
        .map-card {
            height: 400px;
        }
    }
</style>
