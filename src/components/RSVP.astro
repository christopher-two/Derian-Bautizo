<style>
    .rsvp-section {
        padding: var(--section-pad);
        background: linear-gradient(
            135deg,
            #0f2744 0%,
            var(--blue-deep) 50%,
            #1a4a7a 100%
        );
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .rsvp-section::before {
        content: "";
        position: absolute;
        inset: 0;
        background-image: radial-gradient(
                circle at 15% 50%,
                rgba(96, 165, 250, 0.12) 0%,
                transparent 40%
            ),
            radial-gradient(
                circle at 85% 30%,
                rgba(74, 144, 217, 0.1) 0%,
                transparent 40%
            );
        pointer-events: none;
    }

    .rsvp-inner {
        position: relative;
        max-width: 600px;
        margin: 0 auto;
    }

    .rsvp-section .section-label {
        color: rgba(96, 165, 250, 0.8);
    }

    .rsvp-title {
        color: var(--warm-white) !important;
    }

    .rsvp-section .divider {
        background: linear-gradient(
            90deg,
            var(--blue-accent),
            rgba(96, 165, 250, 0.3)
        );
    }

    .rsvp-desc {
        color: rgba(255, 255, 255, 0.7);
        font-family: var(--font-serif);
        font-size: 1.05rem;
        line-height: 1.8;
        margin-bottom: 2.5rem;
    }

    .rsvp-desc strong {
        color: var(--warm-white);
        font-weight: 500;
    }

    .rsvp-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2.5rem;
        background: #25d366;
        color: white;
        font-family: var(--font-sans);
        font-weight: 600;
        font-size: 0.95rem;
        border-radius: 100px;
        box-shadow: 0 8px 30px rgba(37, 211, 102, 0.35);
        transition: var(--transition);
        letter-spacing: 0.02em;
    }

    .rsvp-btn:hover {
        background: #1ebe5b;
        transform: translateY(-3px);
        box-shadow: 0 14px 40px rgba(37, 211, 102, 0.45);
    }

    .rsvp-btn:active {
        transform: translateY(0);
    }

    .rsvp-note {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.4rem;
        margin-top: 1.25rem;
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.4);
        font-family: var(--font-sans);
    }
</style>
